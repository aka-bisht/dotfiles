// zed settings
{
  "show_edit_predictions": false,
  "assistant": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 17,
  "icon_theme": "Zed (Default)",
  "buffer_font_size": 17,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_weight": 300,
  "relative_line_numbers": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Mellow"
  },
  "scrollbar": {
    "show": "never"
  },
  "soft_wrap": "editor_width",
  "gutter": {
    "folds": false,
    "code_actions": false
  },
  "experimental.theme_overrides": {
    "toolbar.background": "#161617",
    "tab.active_background": "#161617",
    "title_bar.background": "#131314",
    "border": "#2a2a2d",
    "border.variant": "#2a2a2d",
    "terminal.background": "#161617",
    "panel.background": "#1b1b1d",
    "status_bar.background": "#131314"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "vim_mode": true
  "hide_mouse": "on_typing_and_movement"
}

